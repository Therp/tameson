<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="purchase_order_view_form_inherit_add_clipboard_field" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.add.clipboardbutton</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='currency_id']" position="after">
                <field name="clipboard_text_handle" invisible="1"/>
            </xpath>
            <xpath expr="//header" position="inside">
                <button name="tameson_po_copy_clipboard" type="object" string="Copy Lines To Clipboard"/>
            </xpath>
        </field>
    </record>

</odoo>
