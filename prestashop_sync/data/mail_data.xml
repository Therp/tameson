<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="tameson_notify_prestashop_cron_issue" model="mail.template">
            <field name="name">Tameson - Prestashop cron issue</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="email_from">${(user.email_formatted) |safe}</field>
            <field name="subject">ODOO - Prestashop cron issue</field>
            <field name="body_html" type="html">
<div style="font-family: 'Lucida Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">
<h1>Prestashop cron issues</h1><br />
% for order, id, issue in ctx.get('issues', []):
    <p><strong>${order} (${id})</strong>: ${issue}</p>
% endfor
<br /><br />
</div>
            </field>
            <field name="lang">${object.lang}</field>
            <field name="user_signature" eval="False"/>
            <field name="auto_delete" eval="True"/>
        </record>

    </data>
</odoo>
