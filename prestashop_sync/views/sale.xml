<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="view_order_form" model="ir.ui.view">
            <field name="name">view_order_form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="arch" type="xml">
                <xpath expr="//page[last()]" position="after">
                    <page string="Prestashop" name="prestashop" attrs="{'invisible': [('prestashop_id', '=', False)]}">
                        <group>
                            <group>
                                <field name="prestashop_id" />
                                <field name="prestashop_module" />
                                <field name="prestashop_date_upd" />
                                <field name="prestashop_config_id" />
                            </group>
                            <group>
                                <field name="all_qty_delivered" string="Shipped" />
                                <field name="force_all_qty_delivered" />
                                <field name="shipped_status_prestashop" />
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
        <record id="action_sale_prestashop" model="ir.actions.act_window">
            <field name="name">Prestashop Orders</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.order</field>
            <field name="view_mode">tree,kanban,form,calendar,pivot,graph,activity</field>
            <field name="search_view_id" ref="sale.sale_order_view_search_inherit_quotation"/>
            <field name="context">{'search_default_my_quotation': 1}</field>
            <field name="domain">[('prestashop_id','!=',False)]</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create a new quotation, the first step of a new sale!
              </p><p>
                Once the quotation is confirmed by the customer, it becomes a sales order.<br/> You will be able to create an invoice and collect the payment.
              </p>
            </field>
        </record>
        
        <record id="menu_sale_prestashop" model="ir.ui.menu" >
            <field name="name">Prestashop Orders</field>
            <field name="sequence" eval="10" />
            <field name="action" ref="action_sale_prestashop" />
            <field name="parent_id" ref="sale.sale_order_menu" />
        </record>
        
        <record id="view_sales_order_filter" model="ir.ui.view">
            <field name="name">view_sales_order_filter</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_sales_order_filter" />
            <field name="arch" type="xml">
                
                <xpath expr="//field[last()]" position="after">
                    <field name="prestashop_id" />
                </xpath>
                
            </field>
        </record>
        
    </data>
</odoo>
