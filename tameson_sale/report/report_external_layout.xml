<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <template id="external_layout_tameson" name="Tameson External Layout">
        <div t-attf-class="header o_company_#{company.id}_layout" style="font-size: 14px;">
            <div class="row">
                <div class="col-3 mb4">
                    <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 60px; margin-top:14px;" alt="Logo"/>
                </div>
                <t t-if="company.report_header2">
                    <div class="col-3 text-left" style="margin-top:10px; padding: 5px; padding-left: 30px; text-align: center;" t-field="company.report_header2" name="reportheader2"/>
                </t>
                <t t-else="else">
                    <div class="col-3 text-left" style="margin-top:10px; padding: 5px; padding-left: 30px; text-align: center;">
                        <div class="row" name="company_address">
                            <div t-field="company.partner_id"
                                t-options='{"widget": "contact", "fields": ["address"], "no_marker": true}'
                            />
                        </div>
                    </div>
                </t>
                <t t-if="company.report_header3">
                    <div class="col-3" style="margin-top:10px;" t-field="company.report_header3" name="reportheader3"/>
                </t>
                <t t-else="else">
                    <div class="col-3" style="margin-top:10px; padding: 5px; text-align: center;">
                        <t t-set="partner_country_code" t-value="o and 'partner_id' in o and o.partner_id and o.partner_id.country_id.code" />
                        <t t-if="partner_country_code == 'GB'">
                            <div class="row">
                                <div>Reg. no: 72902531</div>
                            </div>
                            <div class="row">
                                <div style="white-space: nowrap;">+44 (0)330 8080 502</div>
                            </div>
                            <div class="row">
                                <div>support@tameson.co.uk</div>
                            </div>
                        </t>
                        <t t-if="partner_country_code in ['BE', 'NL']">
                            <div class="row">
                                <div>KVK: 72902531</div>
                            </div>
                            <div class="row">
                                <div style="white-space: nowrap;">+31 (0)40 750 5795</div>
                            </div>
                            <div class="row">
                                <div style="white-space: nowrap;">support@tameson.nl</div>
                            </div>
                        </t>
                        <t t-if="partner_country_code not in ['GB', 'BE', 'NL']">
                            <div class="row">
                                <div>Reg. no: 72902531</div>
                            </div>
                            <div class="row">
                                <div style="white-space: nowrap;">+31 (0)40 750 5795</div>
                            </div>
                            <div class="row">
                                <div>support@tameson.com</div>
                            </div>
                        </t>
                    </div>
                </t>
                <t t-if="company.report_header">
                    <div class="col-3 text-right" style="margin-top:10px;" t-field="company.report_header" name="moto"/>
                </t>
                <t t-else="else">
                    <div class="col-3 text-right" style="margin-top:10px; padding: 5px;">
                        <div class="row">
                            <div class="col-xs-4 text-right" style="padding-right: 5px;">VAT:</div>
                            <div t-field="company.partner_id.vat" />
                        </div>
                        <div class="row">
                            <div class="col-xs-4 text-right"  style="padding-right: 5px;">IBAN:</div>
                            <div>NL66INGB0007718965</div>
                        </div>
                        <div class="row">
                            <div class="col-xs-4 text-right"  style="padding-right: 5px;">BIC/SWIFT:</div>
                            <div>INGBNL2A</div>
                        </div>
                    </div>
                </t>
            </div>
            <div t-if="company.logo or company.report_header" class="row zero_min_height">
                <div class="col-12">
                    <div style="border-bottom: 1px solid black;"/>
                </div>
            </div>

        </div>

        <div t-attf-class="article o_report_layout_standard o_company_#{company.id}_layout"  t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
            <t t-call="web.address_layout"/>
            <t t-raw="0"/>
        </div>

        <div t-attf-class="footer o_standard_footer o_company_#{company.id}_layout">
            <div class="text-center" style="border-top: 1px solid black;">

                <div class="row">
                    <div class="col-10">
                        <div name="financial_infos">
                            <span t-field="company.report_footer"/>
                        </div>
                    </div>
                    <div class="col-2">
                        <div t-if="report_type == 'pdf'">
                            <div class="col-xs-2 text-right">
                                <span>Page:</span>
                                <span class="page"/>
                                <span>/</span>
                                <span class="topage"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </template>

</odoo>
