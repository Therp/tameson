<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template
    id="report_invoice_document"
    inherit_id="sale.report_invoice_document_inherit_sale"
  >
        <xpath expr="//div[@t-field=&quot;o.partner_id&quot;]" position="replace">
            <t t-if="o.partner_shipping_id">
                <div groups="sale.group_delivery_invoice_address">
                    <strong>Shipping Address:</strong>
                    <div
            t-field="o.partner_shipping_id"
            t-options='{"widget": "contact", "fields": ["address", "name", "phone", "email"], "no_marker": True}'
          />
                </div>
            </t>
            <t t-else="">
                <div groups="sale.group_delivery_invoice_address">
                    <strong>Shipping Address:</strong>
                    <div
            t-field="o.partner_id"
            t-options='{"widget": "contact", "fields": ["address", "name", "phone", "email"], "no_marker": True}'
          />
                </div>
            </t>
        </xpath>
        <xpath expr="//div[@t-if=&quot;o.partner_id.vat&quot;]" position="attributes">
            <attribute name="style">display:none</attribute>
        </xpath>
        <xpath
      expr="//t[@t-if=&quot;o.partner_shipping_id and (o.partner_shipping_id != o.partner_id)&quot;]"
      position="replace"
    >
            <t t-set="information_block">
                <div>
                    <strong>Invoice Address:</strong>
                    <div
            t-field="o.partner_id"
            t-options='{"widget": "contact", "fields": ["address", "name", "phone", "email"], "no_marker": True}'
            groups="sale.group_delivery_invoice_address"
          />
                    <div t-if="o.partner_id.vat" class="mt16">
                        <t
              t-if="o.company_id.country_id.vat_label"
              t-esc="o.company_id.country_id.vat_label"
              id="inv_tax_id_label"
            />
                        <t t-else="">Tax ID</t>: <span
              t-field="o.partner_id.vat"
            /></div>
                </div>
            </t>
        </xpath>
        <xpath expr="//div[hasclass('page')]" position="before">
            <br />
        </xpath>
        <xpath expr="//div[@id='informations']" position="inside">
            <t t-set="sale_order" t-value="o.get_sale_order()" />
            <div
        class="col-auto mw-100 mb-2"
        t-if="sale_order and sale_order.client_order_ref"
        name="so_reference"
      >
                <strong>Reference:</strong>
                <p class="m-0" t-field="sale_order.client_order_ref" />
            </div>
            <div
        class="col-auto mw-100 mb-2"
        t-if="o.invoice_payment_term_id"
        name="payterms"
      >
                <strong>Payment Terms:</strong>
                <p class="m-0" t-field="o.invoice_payment_term_id.name" />
            </div>
            <div class="col-auto mw-100 mb-2" t-if="sale_order" name="so_date">
                <strong>Order Date:</strong>
                <t t-if="sale_order and sale_order.date_order">
                    <p class="m-0" t-field="sale_order.date_order" />
                </t>
            </div>
        </xpath>
        <xpath expr="//th[@name='th_description']" position="after">
            <t
        t-set="display_hscode"
        t-value="any([l.product_id and l.product_id.hs_code for l in o.invoice_line_ids])"
      />
            <th name="th_hs_code" t-if="display_hscode" class="text-left"><span
        >HS code</span></th>
        </xpath>
        <xpath expr="//th[@name='th_price_unit']" position="after">
            <th name="th_price_unit_net" t-if="display_discount" class="text-left"><span
        >Net Unit Price</span></th>
        </xpath>
        <xpath expr="//td[@name='account_invoice_line_name']" position="replace">
            <td name="account_invoice_line_name">
                <span t-field="line.name" t-options="{'widget': 'text'}" />
                <t t-if="line.product_id">
                    <t t-foreach="line.product_id.bom_ids" t-as="bom">
                        <div style="font-style: italic; font-size: 12px;">Contents:
                            <t t-foreach="bom.bom_line_ids" t-as="bom_line">
                                <t t-set="bom_product" t-value="bom_line.product_id" />
                                <span t-raw="int(bom_line.product_qty)" />x
                                [<span t-field="bom_product.default_code" />]
                                <span t-if="not bom_line_last"> + </span>
                                <!-- <span t-field="bom_product.name"/> -->
                            </t>
                        </div>
                    </t>
                </t>
            </td>
            <td class="text-right" t-if="display_hscode">
                <t t-if="line.product_id and line.product_id.hs_code">
                    <span t-field="line.product_id.hs_code" />
                </t>
            </td>
        </xpath>
        <xpath expr="//td[@t-if=&quot;display_discount&quot;]" position="after">
            <td
        t-if="display_discount"
        t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"
      >
                <span
          class="text-nowrap"
          t-esc="round(line.price_unit - (line.price_unit*(line.discount/100.00)),2)"
        />
            </td>
        </xpath>
        <xpath
      expr="//p[@t-if=&quot;o.type in ('out_invoice', 'in_refund')&quot;]"
      position="replace"
    >
            <p t-if="o.fiscal_position_id and o.fiscal_position_id.name == 'EU landen'">
                <strong>Fiscal Position Remark: </strong>
                <span>intra-community transaction</span>
            </p>
            <p
        t-if="o.fiscal_position_id and o.fiscal_position_id.name == 'Niet-EU landen'"
      >
                <strong>Fiscal Position Remark: </strong>
                <span>VAT reverse charge - export out of EU _______ </span><strong
        >EORI number: </strong><span>NL859280263</span><br />
                <strong>Preferential origin:</strong>
                <span
        >The exporter of the products covered by this document declares that, except where otherwise clearly indicated, these products are of EU preferential origin.</span>
            </p>
            <p t-if="o.type == 'out_refund'">
                <strong>Remark: </strong>
                <span>This is a credit note / refund</span>
            </p>
            <p
        t-if="o.type in ('out_invoice', 'in_refund') and o.invoice_payment_state != 'paid'"
      >
                Please use the following communication for your payment : <b><span
            t-field="o.invoice_payment_ref"
          /></b>
            </p>
        </xpath>
    </template>
</odoo>
