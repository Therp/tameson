<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="view_order_form">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//header/button[last()]" position="after">
                <button name="action_create_product" string="Create Custom Product" type="object" />
            </xpath>
            <xpath expr="//header/button[@name='%(sale.action_view_sale_advance_payment_inv)d'][2]"
                   position="replace">
                <field name="payment_term_name" invisible="1" />
                <button name="%(sale.action_view_sale_advance_payment_inv)d" string="Create Invoice"
                        type="action" context="{'default_advance_payment_method': 'percentage'}"
                        attrs="{'invisible': ['|',('invoice_status', '!=', 'no'),
                               '|',('state', '!=', 'sale'),('state', '!=', 'draft'),('payment_term_name','!=','Prepayment')]}" />
            </xpath>

            <xpath expr="//field[@name='payment_term_id']" position="after">
                <label for="commitment_date" string="Delivery Date"/>
                <div class="o_row">
                    <field name="commitment_date"/> <span class="text-muted">Expected: <field name="expected_date" widget="date"/></span>
                </div>
            </xpath>
            <xpath expr="//field[@name='fiscal_position_id']" position="after">
                <field name="t_done_pickings" invisible="1" />
                <field name="t_invoice_policy"
                       attrs="{'readonly': [('t_done_pickings', '!=', [])]}" />
                <field name="bypass_credit_limit" groups="sales_team.group_sale_manager,account.group_account_manager" />
            </xpath>
            <xpath expr="//page[last()]" position="after">
                <page string="Help" >
                    <button name="action_set_help" string="Edit help" type="object" class="oe_link" groups="sales_team.group_sale_manager" />
                    <field name="help_text" />
                </page>
            </xpath>
            <xpath expr="//field[@name='order_line']" position="attributes">
                <attribute name="attrs">{'readonly': [('partner_id','=',False)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="attributes">
                <attribute name="options">{'no_create': True, 'no_create_edit': True}</attribute>
            </xpath>
        </field>
    </record>
</odoo>
