<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="report_layout_standard" model="report.layout">
            <field name="name">Tameson Custom</field>
            <field name="view_id" ref="tameson_sale.external_layout_tameson"/>
            <field name="image">/web/static/img/preview_standard.png</field>
            <field name="pdf">/web/static/pdf/preview_standard.pdf</field>
        </record>

        <!-- set font and colors-->
        <function model="res.company" name="write">
            <value model="res.company" search="[
                ('name', '=', 'Tameson B.V.')]"/>
            <value eval="{
                'font': 'Roboto',
                'primary_color': '#a30000',
                'secondary_color': '#000000',
                }"/>
        </function>
    </data>
</odoo>
