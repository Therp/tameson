<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="view_base_document_layout_inherit">
        <field name="name">base.document.layout.form.add.headers</field>
        <field name="model">base.document.layout</field>
        <field name="inherit_id" ref="base.view_base_document_layout" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='report_header']" position="after">
                <field
          name="report_header2"
          string="Header 2"
          placeholder="only applies to Tameson layout"
        />
                <field
          name="report_header3"
          string="Header 3"
          placeholder="only applies to Tameson layout"
        />
            </xpath>
        </field>
    </record>
</odoo>
