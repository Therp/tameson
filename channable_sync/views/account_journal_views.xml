<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="account_journal_form_inherit_channable" model="ir.ui.view">
            <field name="name">account.journal.form.inherit.channable</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form" />
            <field name="arch" type="xml">
                <xpath expr=".//group[@name='column_posting']" position="after">
                    <group
            string="Channable"
            name="channable_name"
            attrs="{'invisible': [('type', 'not in', ['bank', 'cash'])]}"
          >
                        <field name="channable_channel_name" />
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
