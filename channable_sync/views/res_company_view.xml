<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="res_company_form_inherit_channable" model="ir.ui.view">
            <field name="name">res.company.form.inherit.channable</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form" />
            <field name="arch" type="xml">
                <xpath expr=".//notebook" position="inside">
                    <page string="Channable API">
                        <group>
                            <field name="channable_company_id" />
                            <field name="channable_project_id" />
                            <field name="channable_api_token" password="1" />
                        </group>
                        <group
              string="Fetch orders of the following status:"
              colspan="4"
              col="8"
            >
                            <field
                name="channable_orders_not_shipped"
                string="Not Shipped"
              />
                            <field name="channable_orders_shipped" string="Shipped" />
                            <field
                name="channable_orders_cancelled"
                string="Cancelled"
              />
                            <field name="channable_orders_waiting" string="Waiting" />
                        </group>
                        <group string="Import Options" colspan="4" col="2">
                            <field name="channable_prices_contain_tax" />
                            <field name="channable_auto_confirm_order" />
                            <field name="channable_auto_register_payment" />
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
