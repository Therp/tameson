<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="0">
        <record id="shopify_instance_form_view_ept" model="ir.ui.view">
            <field name="name">shopify_instance_form_view_ept</field>
            <field name="model">shopify.instance.ept</field>
            <field name="inherit_id" ref="shopify_ept.shopify_instance_form_view_ept" />
            <field name="arch" type="xml">
                <xpath expr="//page[last()]" position="after">
                    <page name="tameson" string="Tameson">
                        <group>
                            <field name="shopify_multipass_host" />
                            <field name="shopify_multipass_secret" password="1" />
                            <field name="multipass_country_ids" widget="many2many_tags" />
                            <field name="export_done_webhook" />
                            <field name="customer_webhook" />
                            <button name="create_bulk_export_wh" string="Bulk export product" type="object" class="oe_highlight" attrs="{'invisible': [('export_done_webhook','!=',False)]}" />
                            <button name="create_customer_webhook" string="Customer Webhook" type="object" class="oe_highlight" attrs="{'invisible': [('customer_webhook','!=',False)]}" />
                            <button name="delete_bulk_export_wh" string="Bulk remove" type="object" class="oe_highlight" attrs="{'invisible': [('export_done_webhook','=',False)]}" />
                            <button name="delete_customer_webhook" string="Customer remove" type="object" class="oe_highlight" attrs="{'invisible': [('customer_webhook','=',False)]}" />
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
        <record id="view_shopify_process_import_export_ept" model="ir.ui.view">
            <field name="name">view_shopify_process_import_export_ept</field>
            <field name="model">shopify.process.import.export</field>
            <field name="inherit_id" ref="shopify_ept.view_shopify_process_import_export_ept" />
            <field name="arch" type="xml">
                <field name="shopify_operation" position="attributes">
                    <attribute name="invisible">1</attribute>
                    <attribute name="force_save">1</attribute>
                </field>
                <field name="shopify_operation" position="after">
                    <field name="shopify_operation_t" required="1" />
                </field>
            </field>
        </record>
        <record id="sale_workflow_process_view_form_currency" model="ir.ui.view">
            <field name="name">sale_workflow_process_view_form_currency</field>
            <field name="model">sale.workflow.process.ept</field>
            <field name="inherit_id" ref="auto_invoice_workflow_ept.sale_workflow_process_view_form" />
            <field name="arch" type="xml">
                <field name="register_payment" position="after">
                    <field name="currency_journal" attrs="{'invisible':[('register_payment','=',False)]}" />
                </field>

                <xpath expr="//sheet" position="inside">
                    <group attrs="{'invisible':[('currency_journal','=',False)]}">
                        <field name="mapping_ids" nolabel="1">
                            <tree string="Mappings">
                                <field name="currency_id" />
                                <field name="journal_id" />
                            </tree>
                            <form string="Mappings">
                                <group>
                                    <field name="currency_id" />
                                    <field name="journal_id" />
                                </group>
                            </form>
                        </field>
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
