<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="shopify_instance_form_view_ept" model="ir.ui.view">
            <field name="name">shopify_instance_form_view_ept</field>
            <field name="model">shopify.instance.ept</field>
            <field name="inherit_id" ref="shopify_ept.shopify_instance_form_view_ept" />
            <field name="arch" type="xml">
                <field name="shopify_password" position="after">
                    <field name="shopify_multipass_secret" password="1" />
                    <field name="multipass_country_ids" widget="many2many_tags"/>
                    <field name="export_done_webhook" />
                </field>
                <xpath expr="//header[1]" position="after">
                    <button name="create_bulk_export_wh" string="Bulk" type="object" 
                        class="oe_highlight" attrs="{'invisible': [('export_done_webhook','!=',False)]}"/>
                    <button name="delete_bulk_export_wh" string="Bulk remove" type="object" 
                        class="oe_highlight" attrs="{'invisible': [('export_done_webhook','=',False)]}"/>
                </xpath>                
            </field>
        </record>        
        <record id="view_shopify_process_import_export_ept" model="ir.ui.view">
            <field name="name">view_shopify_process_import_export_ept</field>
            <field name="model">shopify.process.import.export</field>
            <field name="inherit_id" ref="shopify_ept.view_shopify_process_import_export_ept" />
            <field name="arch" type="xml">
                <field name="shopify_operation" position="attributes">
                    <attribute name="invisible">1</attribute>
                    <attribute name="force_save">1</attribute>
                </field>
                <field name="shopify_operation" position="after">
                    <field name="shopify_operation_t" required="1" />                    
                </field>
            </field>
        </record>
    </data>
</odoo>
