<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <template id="portal_my_home" inherit_id="portal.portal_my_home">
            <xpath expr="//div[hasclass('o_portal_my_home')]" position="after">
                <a href="/shopify_hosts" aria-label="Shopify" title="Shopify">Shopify <i class="fa fa-trophy"/></a>
            </xpath>
        </template>
        <template id="portal_shopify_hosts" name="Shopify">
            <t t-call="portal.portal_layout">
                <t t-if="instances" t-call="portal.portal_table">
                    <thead>
                        <tr class="active">
                            <th>Shopify hosts</th>
                        </tr>
                    </thead>
                    <t t-foreach="instances" t-as="shopify">
                        <tr>
                            <td><a t-att-href="'/shopify_auth/%d' % shopify.id"><t t-esc="shopify.name"/></a></td>
                        </tr>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
