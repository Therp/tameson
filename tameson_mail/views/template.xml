<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template inherit_id="mail.message_notification_email" id="message_notification_email">
        <xpath expr="//p[@style='color: #555555; margin-top:32px;']" position="replace">
            <p style="color: #555555; margin-top:32px;">
                Best regards, <br />
                <t t-if="company.env.user.id in (2,1)">Tameson Team</t>
                <t t-else="">
                    <t t-esc="company.env.user.name" />
                </t>

            </p>
        </xpath>
    </template>
</odoo>
