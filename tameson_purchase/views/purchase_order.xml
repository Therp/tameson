<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="purchase_order_form" model="ir.ui.view">
        <field name="name">team id</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath 
                expr="//field[@name='order_line']/tree//field[last()]" 
                position="after">
                    <field name="ungrouped_origin"/>
                    <field name="minimal_qty_available" attrs="{'column_invisible': [('parent.state','in',('purchase','done','cancel'))]}" />
                    <field name="max_reorder" attrs="{'column_invisible': [('parent.state','in',('purchase','done','cancel'))]}" />
                    <field name="max_reorder_percentage" attrs="{'column_invisible': [('parent.state','in',('purchase','done','cancel'))]}" />
            </xpath>
            <xpath 
                expr="//field[@name='order_line']//form[last()]//field[@name='product_id']" 
                position="after">
                <field name="ungrouped_origin"/>
                <field name="minimal_qty_available" />
                <field name="max_reorder" />
                <field name="max_reorder_percentage" />
            </xpath>
        </field>
    </record>
</odoo>
