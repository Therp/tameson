<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="picking_form" model="ir.ui.view">
        <field name="name">team id</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath 
                expr="//field[@name='move_ids_without_package']/tree//field[last()]" 
                position="after">
            <field name="origin_so_picking_ids" widget="many2many_tags"  attrs="{'invisible': [('picking_code', '!=', 'incoming')]}" />
            </xpath>
            <xpath 
                expr="//field[@name='move_ids_without_package']/form//group[last()]//field[last()]" 
                position="after">
                <field name="origin_so_picking_ids" />
            </xpath>
            <xpath expr="//button[@name='do_print_picking']" position="after">
                <button 
                    name="do_print_picking_origin_so" 
                    type="object"
                    string="Print Origin SO Picking Operations"
                    groups="stock.group_stock_user"
                    attrs ="{'invisible': [('picking_type_id', '!=', %(stock.picking_type_in)d)]}"
                    >
                </button>
            </xpath> 
        </field>
    </record>
</odoo>
