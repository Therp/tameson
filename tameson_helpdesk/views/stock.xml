<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_stock_picking_reship" model="ir.ui.view">
        <field name="name">view_stock_picking_reship</field>
        <field name="model">stock.return.picking</field>
        <field name="mode">primary</field>
        <field name="priority" eval="16" />
        <field name="active" eval="True" />
        <field name="inherit_id" ref="stock.view_stock_return_picking_form" />
        <field name="arch" type="xml">
            <xpath expr="//group//field[@name='picking_id']" position="attributes">
                <attribute name="string">Delivery to Reship</attribute>
            </xpath>
            <field name="location_id" position="attributes">
                <attribute name="string">Location</attribute>
            </field>
            <button name="create_returns" position="replace">
                <button
          name="action_create_reship"
          string="Reship"
          type="object"
          class="oe_highlight"
        />
            </button>
        </field>
    </record>

</odoo>
