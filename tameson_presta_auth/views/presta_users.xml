<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="view_presta_users_tree" model="ir.ui.view">
            <field name="name">view_presta_users_tree</field>
            <field name="model">presta.users</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="view_presta_users_tree" editable="bottom">
                    <field name="login" />
                    <field name="hashpw" />
                </tree>
            </field>
        </record>
        <record id="action_presta_users_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Presta Users</field>
            <field name="res_model">presta.users</field>
            <field name="view_mode">tree</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context"></field>
        </record>
        
        <!-- Main menu for "model" -->
        <record id="menu_presta_users" model="ir.ui.menu" >
            <field name="name">Presta Users</field>
            <field name="sequence" eval="10" />
            <field name="action" ref="action_presta_users_act_window" />
            <field name="parent_id" ref="base.menu_custom" />
        </record>
        
    </data>
</odoo>
