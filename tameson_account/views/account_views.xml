<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="view_payment_term_form">
        <field name="name">account.payment.term.form</field>
        <field name="model">account.payment.term</field>
        <field name="inherit_id" ref="account.view_payment_term_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='note']" position="after">
                <label for="t_invoice_delivered_quantities" />
                <field name="t_invoice_delivered_quantities" />
            </xpath>
        </field>
    </record>
    
    <record id="view_move_form" model="ir.ui.view">
        <field name="name">view_move_form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[last()]" position="after">
                <page string="Help" >
                    <button name="action_set_help" string="Edit help" type="object" class="oe_link" groups="account.group_account_manager" />
                    <field name="help_text" />                
                </page>
            </xpath>
            <button name="action_post" position="attributes">
                <attribute name="groups">account.group_account_invoice,sales_team.group_sale_salesman,purchase.group_purchase_user</attribute>
            </button>
            <button name="button_draft" position="attributes">
                <attribute name="groups">account.group_account_invoice,sales_team.group_sale_salesman,purchase.group_purchase_user</attribute>
            </button>
            <button name="button_cancel" position="attributes">
                <attribute name="groups">account.group_account_invoice,sales_team.group_sale_salesman,purchase.group_purchase_user</attribute>
            </button>
            <button name="action_reverse" position="attributes">
                <attribute name="groups">account.group_account_invoice,sales_team.group_sale_salesman,purchase.group_purchase_user</attribute>
            </button>
            <xpath expr="//page[@id='invoice_tab']//tree/field[@name='product_id']" position="attributes">                
                <attribute name="options">{'no_create': True, 'no_open': True, 'no_create_edit': True}</attribute>
            </xpath>
        </field>
    </record>
    <record model="ir.ui.view" id="account.partner_view_buttons">
        <field name="groups_id" eval="[(6, 0, [])]"/>
    </record>
    <record model="ir.actions.report" id="account.account_invoices">
        <field name="groups_id" eval="[(6, 0, [])]"/>
    </record>
</odoo>
