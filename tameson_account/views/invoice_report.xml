<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <template id="report_invoice_document" inherit_id="account.report_invoice_document">
            <xpath expr="//div[@id='total']/div[1]" position="before">
                <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-5 col-md-6'}">
                    <t t-set="picking" t-value="o.get_picking_ids()" />
                    <t>
                        <t t-set="tracking" t-value="', '.join(picking.mapped('carrier_tracking_ref'))" />
                        <t t-set="method" t-value="', '.join(picking.mapped('carrier_id').mapped('name'))" />
                        <div t-if="method">
                            Shipping method: <t t-esc="method" />
                        </div>
                        <div t-if="tracking" >
                            Tracking number: <t t-esc="tracking" />
                        </div>
                        <div>
                            <img alt="Signature" class="col-6 d-block img img-fluid" src="/tameson_account/static/src/img/signature.png"/>
                        </div>
                    </t>
                </div>
            </xpath>
        </template> 
    </data>
</odoo>
