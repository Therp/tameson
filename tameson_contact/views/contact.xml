<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="0">

        <record id="view_partner_form" model="ir.ui.view">
            <field name="name">view_partner_form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="arch" type="xml">
                <field name="industry_id" position="after">
                    <field name="t_partner_type_id" />
                </field>
                <xpath expr="//page[last()]" position="after">
                    <page string="Help">
                        <button
              name="action_set_help"
              string="Edit help"
              type="object"
              class="oe_link"
            />
                        <field name="help_text" />
                    </page>
                </xpath>
                <field name="email" position="attributes">
                    <attribute name="required">1</attribute>
                </field>
                <field name="country_id" position="attributes">
                    <attribute name="required">1</attribute>
                </field>
                <xpath expr="//notebook" position="before">
                    <field name="user_ids" invisible="1" />
                    <button
            string="Send Reset Password Instructions"
            type="object"
            name="action_reset_password"
            attrs="{'invisible': [('user_ids', '=', [])]}"
          />
                </xpath>
                <xpath expr="//sheet" position="before">
                    <div
            class="alert alert-success text-center o_form_header"
            attrs="{'invisible': [('user_ids', '=', [])]}"
            role="status"
          >
                        <a
              class="close"
              data-dismiss="alert"
              href="#"
              aria-label="Close"
            >x</a>
                        <div>
                            <strong>Link:</strong>
                        </div>
                        <div><field name="signup_url" widget="url" /></div>
                     </div>
                 </xpath>
            </field>
        </record>

    </data>
</odoo>
