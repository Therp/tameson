<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_model_form" model="ir.ui.view">
        <field name="name">view_model_form</field>
        <field name="model">ir.model</field>
        <field name="inherit_id" ref="base.view_model_form" />
        <field name="arch" type="xml">
            <field name="info" position="after">
                <field name="help_text" />
            </field>
        </field>
    </record>

    <record id="view_company_form_email_signature" model="ir.ui.view">
        <field name="name">view_company_form_email_signature</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form" />
        <field name="arch" type="xml">
            <field name="website" position="after">
                <field name="email_signature" />
            </field>
        </field>
    </record>

</odoo>
