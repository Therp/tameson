<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="0">
        <record id="view_picking_form_po" model="ir.ui.view">
            <field name="name">view_picking_form_po</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form" />
            <field name="arch" type="xml">
                <field name="origin" position="after">
                    <field
            name="source_po_id"
            attrs="{'invisible': [('source_po_id','=',False)]}"
          />
                    <field name="purchase_id" invisible="1" />
                    <field
            name="purchase_confirmation"
            widget="boolean_toggle"
            attrs="{'invisible': [('purchase_id','=',False)]}"
          />
                </field>
                <xpath
          expr="//field[@name='move_ids_without_package']/tree//field[last()]"
          position="after"
        >
                    <field
            name="origin_so_picking_ids"
            widget="many2many_tags"
            attrs="{'invisible': [('picking_code', '!=', 'incoming')]}"
          />
                </xpath>
                <xpath
          expr="//field[@name='move_ids_without_package']/form//group[last()]//field[last()]"
          position="after"
        >
                    <field name="origin_so_picking_ids" />
                </xpath>
                <xpath expr="//button[@name='do_print_picking']" position="after">
                    <button
            name="do_print_picking_origin_so"
            type="object"
            string="Print Origin Deliveries"
            groups="stock.group_stock_user"
            attrs="{'invisible': [('picking_type_id', '!=', %(stock.picking_type_in)d)]}"
          />
                </xpath>
            </field>
        </record>

        <record id="vpicktree_purchase" model="ir.ui.view">
            <field name="name">vpicktree_purchase</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.vpicktree" />
            <field name="arch" type="xml">
                <xpath expr="//field[last()]" position="after">
                    <field name="purchase_confirmation" optional="hide" />
                </xpath>
            </field>
        </record>

    </data>
</odoo>
