<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="delay_mail_send_view" model="ir.ui.view">
            <field name="name">delay_mail_send_view</field>
            <field name="model">picking.delay.mail</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="delay_mail_send_view" create="true" delete="true" edit="true">
                    <sheet>
                        <group>
                            <field name="template_id" />
                            <field name="composer_id" invisible="True" />
                        </group>
                        <field name="picking_ids">
                            <tree string="Selected pickings" create="true" delete="true" edit="false" editable="bottom">
                                <field name="name" />
                                <field name="partner_id" />
                                <field name="company_id" invisible="True"/>
                                <field name="source_so_id" />
                                <field name="old_date_expected" />
                                <field name="scheduled_date" />
                                <field name="state" />
                                <field name="delay_picking_id" />
                                <field name="delay_partner_id" />
                            </tree>
                        </field>
                    </sheet>
                    <footer>
                        <button name="send" string="Send" type="object" class="oe_highlight"/>
                        <button name="cancel" string="Cancel" special="cancel" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_send_delay_mail" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Delay email (auto)</field>
            <field name="res_model">picking.delay.mail</field>
            <field name="view_mode">form</field>
            <field name="binding_model_id" ref="stock.model_stock_picking" />
            <field name="binding_view_types">list</field>
            <field name="target">new</field>
            <field name="domain">[]</field>
            <field name="context"></field>
        </record>
    </data>
</odoo>