<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template
        id="report_picking_document_inherit"
        inherit_id="stock.report_picking"
        priority="20">
        <xpath
            expr="//th[@name='th_product']"
            position="replace">
            <t t-if="o.picking_type_id.code=='incoming'">
            </t>
            <t t-else="">
                <th name="th_product">
                    <strong>Product</strong>
                </th>
            </t>
        </xpath>
        <xpath
            expr="//td[1]"
            position="replace">
            <t t-if="o.picking_type_id.code=='incoming'">
            </t>
            <t t-else="">
                <td>
                    <span t-field="ml.product_id.display_name"/><br/>
                    <span t-field="ml.product_id.description_picking"/>
                </td>
            </t>
        </xpath>
        <xpath
            expr="//th[@name='th_from']"
            position="before">
            <t t-if="o.picking_type_id.code=='incoming'">
                <th name="th_product">
                    <strong>Product</strong>
                </th>
            </t>
            <t t-else="">
            </t>
        </xpath>
        <xpath
            expr="//td[@t-if=&quot;o.picking_type_id.code != 'incoming'&quot;]"
            position="before">
            <t t-if="o.picking_type_id.code=='incoming'">
                <td>
                    <span t-field="ml.product_id.display_name"/><br/>
                    <span t-field="ml.product_id.description_picking"/>
                    <t t-if="ml.product_id.supplierinfo_code">
                        [<span t-field="ml.product_id.supplierinfo_code"/>]
                    </t>
                </td>
            </t>
            <t t-else="">
            </t>
        </xpath>
        <xpath
            expr="//th[@name='th_to']"
            position="replace">
            <t t-if="o.picking_type_id.code=='incoming'">
                <th name="th_t_location">
                    <strong>Location</strong>
                </th>
            </t>
            <t t-else="">
                <th name="th_to" t-if="o.picking_type_id.code != 'outgoing'" groups="stock.group_stock_multi_locations">
                    <strong>To</strong>
                </th>
            </t>
        </xpath>
        <xpath
            expr="//td[@t-if=&quot;o.picking_type_id.code != 'outgoing'&quot;]"
            position="replace">
            <td t-if="o.picking_type_id.code != 'outgoing'" groups="stock.group_stock_multi_locations">
                <div>
                    <t t-if="o.picking_type_id.code=='incoming'">
                        <span t-field="ml.product_id.t_location"/>
                    </t>
                    <t t-else="">
                        <span t-field="ml.location_dest_id"/>
                        <t t-if="ml.result_package_id">
                            <span t-field="ml.result_package_id"/>
                        </t>
                    </t>
                </div>
            </td>
        </xpath>

    </template>
</odoo>
