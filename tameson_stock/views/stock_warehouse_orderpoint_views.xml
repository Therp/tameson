<?xml version="1.0" encoding="UTF-8" ?>

<odoo>

    <record id="view_warehouse_orderpoint_tree" model="ir.ui.view">
        <field name="name">stock.warehouse.orderpoint.tree</field>
        <field name="model">stock.warehouse.orderpoint</field>
        <field name="inherit_id" ref="stock.view_warehouse_orderpoint_tree" />
        <field name="arch" type="xml">
            <xpath expr="/tree" position="replace">
                <tree string="Reordering Rules">
                    <field name="name" modifiers="{'required': true}" />
                    <field name="product_id" can_create="true" can_write="true" modifiers="{'required': true}" />
                    <field name="product_min_qty" modifiers="{'required': true}" />
                    <field name="product_max_qty" modifiers="{'required': true}" />
                    <field name="rr_supplier" modifiers="{'required': true}" />
                    <field name="rr_out_3m" modifiers="{'required': true}" />
                    <field name="rr_count_3m" modifiers="{'required': true}" />
                    <field name="rr_max_out_3m" modifiers="{'required': true}" />
                    <field name="rr_out_12m" modifiers="{'required': true}" />
                    <field name="rr_count_12m" modifiers="{'required': true}" />
                </tree>
            </xpath>
        </field>
    </record>
    
    <record id="view_warehouse_aa" model="ir.ui.view">
        <field name="name">view_warehouse_aa</field>
        <field name="model">stock.warehouse</field>
        <field name="inherit_id" ref="stock.view_warehouse" />
        <field name="arch" type="xml">
            <field name="code" position="after">
                <field name="aa_api" />
                <field name="aa_username" />
                <field name="aa_password" />
            </field>
        </field>
    </record>
    

</odoo>
