<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_picking_internal_search" model="ir.ui.view">
        <field name="name">stock.picking.search</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_internal_search" />
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='done']" position="after">
                <filter name="t_partner_not_in_eu"
                        string="Partner outside EU"
                        domain="[('t_partner_outside_eu', '=', True)]" />
            </xpath>
            <xpath expr="//separator[last()]" position="before">
                <separator/>
                <filter name="t_unknown_date"
                        string="Unknown date"
                        domain="[('unknown_date', '=', True)]" />
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="view_picking_form">
        <field name="name">stock.picking.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">
            <xpath expr="//header/button[@name='button_validate'][last()]" position="after">
                <button name="fill_done_qtys"
                        states="draft,partially_available,assigned"
                        string="Fill done QTYs"
                        groups="stock.group_stock_user"
                        type="object"
                        class="oe_highlight" />
                        
                <button name="action_mail_send" string="Send" type="object" class="oe_highlight"/>
                <button name="action_create_batch" string="Batch for ready shipments" type="object" attrs="{'invisible': ['|', ('state','not in',('done')), ('picking_type_code','!=','incoming')]}" />
            </xpath>
            <field name="scheduled_date" position="before">
                <field name="picking_type_code" invisible="1" />
                <field name="unknown_date" attrs="{'invisible': [('picking_type_code','!=','outgoing')]}" />
            </field>
            <xpath expr="//page[last()]" position="after">
                <page name="tameson" string="Tameson">
                    <group>
                        <group name="general">
                            <field name="t_delivery_allowed" />
                            <field name="t_partner_outside_eu" />
                            <field name="t_payment_status" />
                        </group>
                    </group>
                </page>
                <page string="Help" >
                    <button name="action_set_help" string="Edit help" type="object" class="oe_link" groups="stock.group_stock_manager" />
                    <field name="help_text" />    
                </page>
            </xpath>
            <xpath expr="//page[3]" position="attributes">
                <attribute name="autofocus">autofocus</attribute>
            </xpath>
            <xpath expr="//field[@name='move_ids_without_package']/form/group" position="after">
                <group string="Relations">
                    <field name="move_orig_ids" nolabel="1" />
                    <field name="move_dest_ids" nolabel="1" />
                    <button name="action_remove_orig" string="Remove Orig Relation" type="object" class="oe_link"/>
                    <button name="action_remove_dest" string="Remove Dest Relation" type="object" class="oe_link"/>    
                </group>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="vpicktree">
        <field name="name">stock.picking.tree</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.vpicktree" />
        <field name="arch" type="xml">
            <xpath expr="//field[last()]" position="after">
                <field name="t_payment_status" optional="hide" />
                <field name="t_delivery_allowed" optional="hide" />
                <field name="t_partner_outside_eu" optional="hide" />
                <field name="unknown_date" optional="hide" />
            </xpath>
        </field>
    </record>
    
    <record model="ir.ui.view" id="stock_picking_batch_form">
        <field name="name">stock.picking.batch.form_t</field>
        <field name="model">stock.picking.batch</field>
        <field name="inherit_id" ref="stock_picking_batch.stock_picking_batch_form" />
        <field name="arch" type="xml">
			<xpath expr="//field[@name='origin']" position="after">
				<field name="t_delivery_allowed" optional="show" />
            </xpath>
            <xpath expr="//header[1]//button[last()]" position="after">
                <button name="print_batch_stock_picking_invoices" string="Picking invoices" type="object" class="oe_highlight"/>                
            </xpath>
            <xpath expr="//field[@name='scheduled_date']" position="before">
				<field name="create_date" optional="show" />
            </xpath>
            <xpath expr="//field[@name='scheduled_date']" position="after">
				<field name="partner_id" optional="show"/>
				<field name="carrier_id" optional="show" string="Delivery method"/>
            </xpath>
        </field>
    </record>
    <record id="view_move_tree" model="ir.ui.view">
        <field name="name">view_move_tree</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[1]" position="before">
                <field name="date_expected" />
            </xpath>
            <xpath expr="//field[@name='product_id']" position="before">
                <field name="partner_id" />
            </xpath>
            <xpath expr="//field[@name='product_uom_qty']" position="after">
                <field name="reserved_availability" />
                <field name="quantity_done" />
            </xpath>
        </field>
    </record>
    <record id="view_delivery_carrier_form" model="ir.ui.view">
        <field name="name">view_delivery_carrier_form</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form" />
        <field name="arch" type="xml">
            <field name="company_id" position="after">
                <field name="t_aa_shipper_mapping" />
            </field>
        </field>
    </record>    
</odoo>
