<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_picking_internal_search" model="ir.ui.view">
        <field name="name">stock.picking.search</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_internal_search" />
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='done']" position="after">
                <filter name="t_partner_not_in_eu"
                        string="Partner outside EU"
                        domain="[('t_partner_outside_eu', '=', True)]" />
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="view_picking_form">
        <field name="name">stock.picking.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">
            <xpath expr="//header/button[@name='button_validate'][last()]" position="after">
                <button name="fill_done_qtys"
                        states="draft,partially_available,assigned"
                        string="Fill done QTYs"
                        groups="stock.group_stock_user"
                        type="object"
                        class="oe_highlight" />
            </xpath>

            <xpath expr="//page[last()]" position="after">
                <page name="tameson" string="Tameson">
                    <group>
                        <group name="general">
                            <field name="t_delivery_allowed" />
                            <field name="t_partner_outside_eu" />
                            <field name="t_payment_status" />
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="vpicktree">
        <field name="name">stock.picking.tree</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.vpicktree" />
        <field name="arch" type="xml">
            <xpath expr="//field[last()]" position="after">
                <field name="t_payment_status" optional="hide" />
                <field name="t_delivery_allowed" optional="hide" />
                <field name="t_partner_outside_eu" optional="hide" />
            </xpath>
        </field>
    </record>
    
    <record model="ir.ui.view" id="stock_picking_batch_form">
        <field name="name">stock.picking.batch.form_t</field>
        <field name="model">stock.picking.batch</field>
        <field name="inherit_id" ref="stock_picking_batch.stock_picking_batch_form" />
        <field name="arch" type="xml">
			<xpath expr="//field[@name='origin']" position="after">
				<field name="t_delivery_allowed"/>        
			</xpath>
        </field>
    </record>
    <record id="view_move_tree" model="ir.ui.view">
        <field name="name">view_move_tree</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[1]" position="before">
                <field name="date_expected" />
            </xpath>
            <xpath expr="//field[@name='product_id']" position="before">
                <field name="partner_id" />
            </xpath>
            <xpath expr="//field[@name='product_uom_qty']" position="after">
                <field name="reserved_availability" />
                <field name="quantity_done" />
            </xpath>
        </field>
    </record> 
</odoo>
