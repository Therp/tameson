<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_order_pob_access_point_id" model="ir.ui.view">
        <field name="name">sale.order</field>
        <field name="model">sale.order</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">  
            <xpath expr="//group[@name='sales_person']" position="inside">                
                <label for="presta_ups_access_point_id" />
                <div class="o_row">
                    <field name="presta_ups_access_point_id" />
                    <span>(<a href="https://www.ups.com/dropoff?loc=en_nl" target="new">UPS Access Points</a>)</span>
                </div>
                <label for="presta_ups_access_point_country" />
                <div class="o_row">
                    <field name="presta_ups_access_point_country" />
                    <span>(<a href="https://www.ups.com/content/us/en/codes.html" target="new">UPS Access Point Countries</a>)</span>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
